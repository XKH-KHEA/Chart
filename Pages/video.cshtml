@page
@model SignalRChat.Pages.videoModel
@{

<div class="video-container">
    <div class="video-section">
        <h2>Live Video Stream</h2>
        <video id="localVideo" autoplay muted></video>
        <video id="remoteVideo" autoplay></video>
        <button id="startButton">Start Stream</button>
    </div>
</div>

<script src="~/js/signalr/dist/browser/signalr.js"></script>
<script src="~/js/video.js"></script>

<style>
    .video-container {
        width: 60%;
        margin: auto;
        text-align: center;
        padding: 20px;
        background: #f9f9f9;
        border-radius: 8px;
        box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.1);
    }

    .video-section {
        display: flex;
        flex-direction: column;
        align-items: center;
    }

    video {
        width: 80%;
        max-width: 600px;
        border-radius: 8px;
        margin-bottom: 10px;
        border: 3px solid #007bff;
    }

    #startButton {
        padding: 10px 15px;
        background: #007bff;
        color: white;
        border: none;
        border-radius: 4px;
        cursor: pointer;
        font-size: 16px;
    }

    #startButton:hover {
        background: #0056b3;
    }
</style>
}